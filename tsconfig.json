{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es7",
      "esnext",
      "scripthost"
    ],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*"
  ]
}